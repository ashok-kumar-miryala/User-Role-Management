<h1>User Details</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Role</th>
      <th>Address Line</th>
      <th>Land Mark</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Pincode</th>
      <th>Profile</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
        <td><%= @user.phone_number %></td>
        <td><%= @user.role %></td>
        <td><%= @user.address_line %></td>
        <td><%= @user.land_mark %></td>
        <td><%= @user.street %></td>
        <td><%= @user.city %></td>
        <td><%= @user.state %></td>
        <td><%= @user.pincode %></td>
        <td><%= image_tag @user.avatar.thumb.url%></td>
        <td><%= link_to 'Edit', edit_user_path(@user) %></td>
      </tr>
  </tbody>
</table>

<br>

